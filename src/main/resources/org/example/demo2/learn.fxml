<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" stylesheets="@learn.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo2.learnController">
    <children>
        <!-- Word Display -->
        <Label fx:id="germanWordLabel" layoutX="50.0" layoutY="49.0" text="German Word">
         <font>
            <Font name="Times New Roman Bold" size="25.0" />
         </font></Label>

        <!-- Translation -->
        <Label fx:id="englishTranslationLabel" layoutX="50.0" layoutY="100.0" text="English Translation">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font></Label>

        <!-- Example Sentence -->
        <Label fx:id="sentenceLabel" layoutX="50.0" layoutY="150.0" prefWidth="400.0" text="Sample sentence with the word" wrapText="true">
         <font>
            <Font name="Times New Roman Italic" size="16.0" />
         </font></Label>

        <!-- Word Image -->
        <ImageView fx:id="wordImage" fitHeight="200.0" fitWidth="300.0" layoutX="170.0" layoutY="196.0" />

        <!-- Next Button -->
        <Button fx:id="nextButton" layoutX="463.0" layoutY="414.0" prefHeight="40.0" prefWidth="150.0" text="Got it, Next">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font></Button>
    </children>
</AnchorPane>
