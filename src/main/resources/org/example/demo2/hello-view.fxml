         <LinearGradient endX="1.0" endY="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color red="0.27976566553115845" green="0.3815789520740509" blue="0.22082115709781647" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="0.14717957377433777" green="0.9736841917037964" blue="0.10367933660745621" />
                  </color>
               </Stop>
            </stops>
         </LinearGradient>
      </textFill></Label>
    <Button onAction="#GoToLearn" text="got to learn">
      <font>
         <Font name="Times New Roman Bold" size="20.0" />
      </font></Button>
  <Button onAction="#GoToReview" text="go to review">
      <font>
         <Font name="Times New Roman Bold" size="20.0" />
      </font></Button>
</VBox>
